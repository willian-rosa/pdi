                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </BarChart>
                  <BarChart fx:id="hist2" prefHeight="150.0" prefWidth="400.0" title="Imagem 2">
                     <xAxis>
                        <CategoryAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis side="LEFT" />
                     </yAxis>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </BarChart>
                  <BarChart fx:id="hist3" prefHeight="150.0" prefWidth="400.0" title="Imagem 3">
                     <xAxis>
                        <CategoryAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis side="LEFT" />
                     </yAxis>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </BarChart>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
